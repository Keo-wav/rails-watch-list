<h1><%= @list.name %></h1>
<% @list.movies.each do |movie| %>
<h3><%= movie.title %></h3>
<%= cl_image_tag(movie.poster_url,
      width: 150, crop: :thumb, gravity: :face) %>
<p><%= movie.overview %></p>
<% bookmark = Bookmark.find_by(movie: movie, list: @list) %>
<p>Comment : <%= bookmark.comment %></p>
<p><%= link_to 'delete this movie', bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}  %></p>
<% end %>

<%= link_to 'Back', lists_path %>
<%= link_to 'New bookmark', new_list_bookmark_path(@list) %>
